<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kuning"
    android:onClick="kirimTelpon"
    android:visibility="visible"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="104dp">

        <ImageView
            android:id="@+id/fotobiodata"
            android:layout_width="332dp"
            android:layout_height="269dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.569"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/fotosaya" />

        <TextView
            android:id="@+id/tekshobi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="4dp"
            android:text="Hobi: Mancing dan Main Game"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teksdeskripsi" />

        <TextView
            android:id="@+id/teksdeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:text="Welcome My Aplication"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teksnama"
            tools:ignore="UnknownId" />

        <Button
            android:id="@+id/tombolemail"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="152dp"
            android:layout_marginBottom="188dp"
            android:onClick="kirimEmail"
            android:text="Email"
            tools:textColor="@color/purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/tomboltelpon"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="kirimTelpon"
            android:text="Telpon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.697"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.819"
            tools:textColor="@color/merah" />

        <Button
            android:id="@+id/tombolalamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="tampilMaps"
            android:text="Alamat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.876"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.903"
            tools:textColor="@color/kuning" />

        <TextView
            android:id="@+id/teksnama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama:Muhammad Rifky Luhur Utama"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/tombolemail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teksnim"
            app:layout_constraintVertical_bias="0.064" />

        <TextView
            android:id="@+id/teksnim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="18dp"
            android:text="Nim:A11.2020.12915"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fotobiodata" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
